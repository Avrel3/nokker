{
  "compilerOptions": {
    "rootDir": "src",
    "moduleResolution": "node",
    "types": ["node"],
    "module": "CommonJS",
    "lib": ["DOM", "ES2015", "ESNext", "ES2016"],
    "target": "ES5",
    "outDir": "lib",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": false,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/", "./bin/"]
}
